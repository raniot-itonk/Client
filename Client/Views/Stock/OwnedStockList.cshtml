@model IEnumerable<Client.Controllers.OwnedStockViewModel>

@{
    ViewData["Title"] = "OwnedStockList";
}

<h1>OwnedStockList</h1>

@if (!Model.Any())
{
    <p>You do not own any stocks</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastTradedValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastTradedValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.ActionLink("Sell", "Sell", new { id = item.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
}

