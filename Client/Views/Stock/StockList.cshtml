@model IEnumerable<Client.Models.Responses.PublicShareOwnerControl.StockResponse>

@{
    ViewData["Title"] = "StockList";
}

<h1>StockList</h1>
@if (!Model.Any())
{
    <p>No Stocks could be found</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastTradedValue)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastTradedValue)
                </td>
                <td>
                    @Html.ActionLink("Buy", "Buy", new { id=item.Id  })
                </td>
            </tr>
        }
        </tbody>
    </table>
}
